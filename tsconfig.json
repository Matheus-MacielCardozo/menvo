{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "*": [
        "./src/*",
        "./*"
      ],
      "services/*": [
        "./services/*"
      ],
      "store/*": [
        "./store/*"
      ],
      "types/*": [
        "./types/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "components/*": [
        "./src/app/components/*",
        "./src/components/*"
      ],
      "layouts/*": [
        "./src/app/layouts/*",
        "./src/layouts/*"
      ],
      "hooks/*": [
        "./src/hooks/*"
      ],
    }
  },
  "include": [
    ".",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
